[user]
  name = Aaron Mc Adam
  email = aaron@aaronmcadam.com
[init]
  templatedir = ~/.git_template
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[alias]
  aa = add --all
  ap = add --patch
  br = branch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ca = commit --amend
  car = commit --amend --no-edit
  ci = commit -v # -v adds the diff to the commit message template
  co = checkout
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  current-branch = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
  d = diff
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  dt = difftool
  dtc = difftool --cached
  dup = !git checkout develop && git pull && git checkout -
  f = flow feature
  ff = flow feature finish
  fl = flow
  fs = flow feature start
  issues = !hub browse -- issues
  ls = ls-tree --full-tree -r HEAD # List files in repo
  m = merge
  mup = !git checkout master && git pull && git checkout -
  newauthor = commit --amend --reset-author -C HEAD
  pf = push --force-with-lease
  pr = !git push -u && gh pull-request
  r = flow release
  rf = flow release finish
  rs = flow release start
  st = status
  sta = stash
  staged = diff --cached
  track = update-index --no-assume-unchanged
  trust = !mkdir -p .git/safe
  untrack = update-index --assume-unchanged
  forget = !git untrack
  ls-untracked = !sh -c 'git ls-files -v | grep "^[[:lower:]]"'
  unstage = reset HEAD
  unstaged = diff
  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -10
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[apply]
  whitespace = nowarn
[commit]
  template = ~/.gitmessage
[branch]
  autosetupmerge = true
[fetch]
  prune = true
[push]
  # Only push branches that have been set up to track a remote branch.
  default = current
[github]
  user = aaronmcadam
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[merge]
  ff = only
	tool = code
[pager]
  status = true
[rebase]
  autosquash = true
